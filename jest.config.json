{
  "collectCoverage": true,
  "setupFilesAfterEnv": ["./jest.setup.js"],
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testEnvironment": "jest-environment-jsdom",
  "moduleFileExtensions": [
    "js",
    "jsx"
  ],
  "modulePaths": [
    "<rootDir>"
  ],
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/$1",
    "^/(.*)$": "<rootDir>/$1",
    "\\.(css|scss)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest",
    "^.+\\.(css|sass|scss)$": "jest-css-modules-transform"
  },
  "collectCoverageFrom": [
    "app/**/*.{js,jsx}",
    "components/**/*.{js,jsx}",
    "lib/**/*.{js,jsx}",
    "model/**/*.{js,jsx}",
    "pages/**/*.{js,jsx}",
    "!**/__tests__/**",
    "!**/*.test.{js,jsx}",
    "!**/*.spec.{js,jsx}",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/public/**",
    "!**/styles/**",
    "!**/blog/**",
    "!**/java/**",
    "!**/__mocks__/**",
    "!**/babel.config.js",
    "!**/jest.config.json",
    "!**/jest.setup.js",
    "!**/next.config.js",
    "!**/postcss.config.js",
    "!**/tailwind.config.js",
    "!**/jsconfig.json",
    "!**/siteconfig.json",
    "!pages/_app.js",
    "!pages/_document.js"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html",
    "json-summary"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "statements": 70
    }
  }
}
