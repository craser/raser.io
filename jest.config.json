{
  "collectCoverage": true,
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testEnvironment": "jest-environment-jsdom",
  "moduleFileExtensions": ["js", "jsx"],
  "modulePaths": [
    "<rootDir>"
  ],
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/$1",
    "^/(.*)$": "<rootDir>/$1"
  }
}
