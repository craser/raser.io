{
  "collectCoverage": true,
  "setupFilesAfterEnv": ["./jest.setup.js"],
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testEnvironment": "jest-environment-jsdom",
  "moduleFileExtensions": [
    "js",
    "jsx"
  ],
  "modulePaths": [
    "<rootDir>"
  ],
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/$1",
    "^/(.*)$": "<rootDir>/$1",
    "\\.(css|scss)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest",
    "^.+\\.(css|sass|scss)$": "jest-css-modules-transform"
  }
}
